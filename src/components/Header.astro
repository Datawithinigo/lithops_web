---
const navItems = [
  { text: 'Home', href: '/' },
  { text: 'Getting Started', href: '/getting-started' },
  { text: 'Documentation', href: '/documentation' },
  { text: 'Blog', href: '/blog' },
  { text: 'Green Computing', href: '/green-computing' },
  { text: 'Contributing', href: '/contributing' },
];

const githubInfo = {
  version: 'v2.8.0',
  stars: '1.2k',
  forks: '124'
};
---

<header class="bg-primary text-white w-full z-50">
  <!-- Logo and main navigation bar -->
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between py-3">
      <div class="flex items-center space-x-4">
        <!-- Logo -->
        <a href="/" class="flex items-center">
          <div class="bg-black/20 p-1 rounded">
            <span class="font-mono text-lg font-bold">Lithops</span>
          </div>
        </a>
        <a href="/" class="text-xl font-bold">Lithops</a>
      </div>

      <div class="flex items-center space-x-4">
        <!-- Settings icon -->
        <a href="/settings" class="p-2 hover:bg-white/10 rounded-full" title="Settings">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </a>

        <!-- Search bar -->
        <div class="relative hidden md:block">
          <input 
            type="text" 
            placeholder="Search" 
            class="bg-white/20 text-white placeholder-white/70 rounded px-4 py-1 w-64 focus:outline-none focus:ring-2 focus:ring-white/50"
          />
          <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>

        <!-- GitHub info -->
        <a 
          href="https://github.com/lithops-cloud/lithops" 
          target="_blank"
          class="hidden md:flex items-center space-x-1 bg-white/10 rounded px-3 py-1 hover:bg-white/20 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-xs">{githubInfo.version}</span>
          <span class="flex items-center text-xs">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
            {githubInfo.stars}
          </span>
          <span class="flex items-center text-xs">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
            </svg>
            {githubInfo.forks}
          </span>
        </a>

        <!-- Quote icon -->
        <a href="/testimonials" class="p-2 hover:bg-white/10 rounded-full" title="Testimonials">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Secondary navigation -->
  <nav class="bg-primary/90 border-t border-white/10">
    <div class="container mx-auto px-4">
      <ul class="flex overflow-x-auto">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href} 
              class="block px-4 py-3 text-white/90 hover:text-white hover:bg-white/10 transition-colors whitespace-nowrap"
            >
              {item.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>
