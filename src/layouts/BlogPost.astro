---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} - Lithops Blog`} description={frontmatter.description}>
  <Header />
  <main class="container mx-auto px-4 py-12">
    <article class="max-w-3xl mx-auto">
      <header class="mb-8">
        <h1 class="text-4xl font-bold mb-4">{frontmatter.title}</h1>
        <div class="flex items-center text-gray-600 mb-6">
          <time datetime={frontmatter.date}>
            {new Date(frontmatter.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {frontmatter.author && (
            <>
              <span class="mx-2">â€¢</span>
              <span>{frontmatter.author}</span>
            </>
          )}
        </div>
        {frontmatter.image && (
          <img 
            src={frontmatter.image} 
            alt={frontmatter.title}
            class="w-full h-64 md:h-96 object-cover rounded-lg shadow-md mb-6"
          />
        )}
        {frontmatter.description && (
          <p class="text-xl text-gray-700 italic">{frontmatter.description}</p>
        )}
      </header>
      
      <div class="prose prose-lg max-w-none">
        <slot />
      </div>
      
      <div class="mt-12 pt-8 border-t border-gray-200">
        <a href="/blog" class="text-primary hover:underline flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          Back to all posts
        </a>
      </div>
    </article>
  </main>
  <Footer />
</Layout>

<style is:global>
  /* Add some basic styling for markdown content */
  .prose h2 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.7;
  }
  
  .prose ul, .prose ol {
    margin-left: 2rem;
    margin-bottom: 1.25rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose a {
    color: #3182ce;
    text-decoration: underline;
  }
  
  .prose blockquote {
    border-left: 4px solid #e2e8f0;
    padding-left: 1rem;
    font-style: italic;
    margin-left: 0;
    margin-right: 0;
  }
  
  .prose code {
    background-color: #f7fafc;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }
  
  .prose pre {
    background-color: #2d3748;
    color: #e2e8f0;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }
  
  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }
  
  .prose img {
    border-radius: 0.5rem;
    margin: 2rem 0;
  }
  
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
  }
  
  .prose table th, .prose table td {
    border: 1px solid #e2e8f0;
    padding: 0.75rem;
  }
  
  .prose table th {
    background-color: #f7fafc;
    font-weight: 600;
  }
</style>
